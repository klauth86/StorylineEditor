<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:StorylineEditor.ViewModels.GameEvents"
                    xmlns:controls="clr-namespace:StorylineEditor.Views.Controls">
    <DataTemplate DataType="{x:Type local:GE_PassJournalRecordNodeVm}">
        <GroupBox Header="Квест и шаг/альтернатива" HeaderTemplate="{StaticResource DT_Header_GroupBox}">
            <StackPanel Orientation="Vertical">
                <controls:FilteredComboBox FilteredItemsSource="{Binding Parent.Parent.Parent.Parent.JournalRecords}" 
                              DisplayMemberPath="Name"
                              SelectedValue="{Binding JournalRecord, UpdateSourceTrigger=PropertyChanged}"></controls:FilteredComboBox>
                <controls:FilteredComboBox FilteredItemsSource="{Binding JournalRecord.Nodes}"
                              Visibility="{Binding JournalRecord, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource collapseNullConverter}}"
                              SelectedValue="{Binding JournalRecordNode, UpdateSourceTrigger=PropertyChanged}"
                              ItemTemplate="{StaticResource DT_Selector_JNode}">
                </controls:FilteredComboBox>
            </StackPanel>
        </GroupBox>
    </DataTemplate>
</ResourceDictionary>