<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Color_HitVisible" Color="#01ffffff"/>

    <SolidColorBrush x:Key="Color_Selection_Unselected" Color="Silver"/>

    <SolidColorBrush x:Key="Color_Selection_Border" Color="Goldenrod"/>

    <SolidColorBrush x:Key="Color_IsDragOver" Color="#5500ff00"/>

    <SolidColorBrush x:Key="Color_Selection_Background" Color="#22DAA520"/>

    <SolidColorBrush x:Key="Color_PreviewLink" Color="Goldenrod" />
    
    <SolidColorBrush x:Key="Color_PreviewLink_Allow" Color="Green" />

    <SolidColorBrush x:Key="Color_PreviewLink_Disallow" Color="Red" />

    <SolidColorBrush x:Key="Color_Link" Color="Black" />

    <SolidColorBrush x:Key="Color_Link_Foreground" Color="White" />

    <SolidColorBrush x:Key="Color_Graph_Node_Background" Color="White" />

    <SolidColorBrush x:Key="Color_Graph_Node_Background_Player" Color="LightGreen" />

    <SolidColorBrush x:Key="Color_Graph_Background" Color="Gray"/>

    <SolidColorBrush x:Key="Color_Separator" Color="Silver" />

    <SolidColorBrush x:Key="Color_Add" Color="Green" />

    <SolidColorBrush x:Key="Color_AddFolder" Color="Goldenrod" />
    
    <SolidColorBrush x:Key="Color_Remove" Color="Red" />

    <SolidColorBrush x:Key="Color_Path" Color="RoyalBlue" />

    <SolidColorBrush x:Key="Color_ToolTip" Color="#88000000" />

    <SolidColorBrush x:Key="Color_HasPredicates_Fill" Color="Purple" />

    <SolidColorBrush x:Key="Color_HasGameEvents_Fill" Color="Teal" />

    <SolidColorBrush x:Key="Color_HasPredicates_Foreground" Color="White" />

    <SolidColorBrush x:Key="Color_HasGameEvents_Foreground" Color="White" />

    <SolidColorBrush x:Key="Color_Stats_Background" Color="LightGray"/>

    <SolidColorBrush x:Key="Color_Player_Error" Color="DarkRed"/>

    <RadialGradientBrush x:Key="Color_PlayerIndicator" GradientOrigin="0.5, 0.5" Center="0.5, 0.5" RadiusX="0.5" RadiusY="0.5">
        <GradientStop Color="Goldenrod" Offset="0"></GradientStop>
        <GradientStop Color="#FFDAA520" Offset="0.6"></GradientStop>
        <GradientStop Color="#00DAA520" Offset="0.9"></GradientStop>
    </RadialGradientBrush>

    <SolidColorBrush x:Key="Color_IsDownloading_Indicator" Color="Green" />
    
</ResourceDictionary>